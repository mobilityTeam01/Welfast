<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Heading" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="subButton" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/small_button_bg</item>
    </style>

    <style name="navDrawerMenuHead" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/tvGrey</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="navDrawerMenuView" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginHorizontal">14dp</item>
        <item name="android:background">@color/viewGrey</item>
    </style>

    <style name="medicalReportHeading" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

    <style name="medicalReportText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/reportGrey</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginHorizontal">18dp</item>
    </style>

    <style name="editProfileEt" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/etGrey</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@drawable/grey_border</item>
    </style>

    <style name="cardText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:shadowColor">@color/shadow</item>
    </style>

    <style name="contactText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="viewProfileTextHead" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tvGrey_head</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="viewProfileText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/tvGrey_head</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="bookingEt" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/etGrey</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:layout_marginHorizontal">19dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/grey_border</item>
    </style>

</resources>