<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BottomNavMenus.Doctors.ViewProfile.ViewProfileActivity">

        <LinearLayout
            android:id="@+id/llHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <include
                android:id="@+id/ivBackButton"
                layout="@layout/back_button"/>

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/viewProfile"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                style="@style/Heading"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivDoctorsProfileImage"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/profile_pic"
            android:contentDescription="@string/profilePic"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/llHeading"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/ivDoctorsProfile"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/profile_pic"
            android:contentDescription="@string/profilePic"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/llHeading"
            android:layout_centerHorizontal="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivDoctorsProfile"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="24dp"
            >
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/nameV"
                style="@style/viewProfileTextHead"
                />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                style="@style/viewProfileText"
                tools:text="@string/sampleName"
                android:layout_toEndOf="@id/visitingTime"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/degreee"
                android:layout_below="@id/tvName"
                style="@style/viewProfileTextHead"
                />

            <TextView
                android:id="@+id/tvDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                style="@style/viewProfileText"
                tools:text="@string/sampleDesignation"
                android:layout_toEndOf="@id/visitingTime"
                android:layout_below="@id/tvName"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/specialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/specialty"
                android:layout_below="@id/tvDegree"
                style="@style/viewProfileTextHead"
                />

            <TextView
                android:id="@+id/tvSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                style="@style/viewProfileText"
                tools:text="@string/sampleDesignation"
                android:layout_toEndOf="@id/visitingTime"
                android:layout_below="@id/tvDegree"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/visitingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="@string/visitingTime"
                android:layout_below="@id/tvSpecialty"
                style="@style/viewProfileTextHead"
                />

            <TextView
                android:id="@+id/tvVisitingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                style="@style/viewProfileText"
                tools:text="@string/sampleDesignation"
                android:layout_toEndOf="@id/visitingTime"
                android:layout_below="@id/tvSpecialty"
                android:layout_marginBottom="8dp"
                />


        </RelativeLayout>


        <include
            android:id="@+id/buttonBookAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            layout="@layout/blue_button"/>

    </RelativeLayout>
</layout>
